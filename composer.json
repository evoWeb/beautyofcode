{
	"name": "evoweb/beautyofcode",
	"type": "typo3-cms-extension",
	"description": "Provides state-of-the-art syntax highlighting by using JavaScript.",
	"keywords": [
		"TYPO3",
		"extension",
		"syntax highlighting",
		"prism",
		"syntaxhighlighter"
	],
	"homepage": "https://github.com/fnagel/beautyofcode",
	"authors": [
		{
			"name": "Felix Nagel",
			"email": "info@felixnagel.com",
			"role": "Project Leader, Developer"
		},
		{
			"name": "Thomas Juhnke",
			"email": "dev@van-tomas.de",
			"role": "Project Co-Leader, Developer"
		}
	],
	"license": "GP-2.0+",
	"require": {
		"php": ">=7.2,<7.3",
		"typo3/cms-core": "^9.5",
		"typo3/cms-t3editor": "^9.5"
	},
	"require-dev": {
		"typo3/testing-framework": "*",
		"fluidtypo3/development": "*"
	},
	"autoload": {
		"psr-4": {
			"TYPO3\\Beautyofcode\\": "Classes"
		}
	},
	"autoload-dev": {
		"files": [
			"./class.ext_update.php"
		]
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	}
}
